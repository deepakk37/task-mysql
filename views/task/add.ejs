<%- include ../layouts/header.ejs %>
 
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
 
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>
<div class="container">
    <div class="jumbotron">
        <h3><%= title %></h3>
    <form action="/tasks/add" method="post" name="form1">
        <div class="form-group">
            <label for="comment">Due Date:</label>
            <input type="date" id="due_date"  name="due_date" required>
        </div>
        <div class="form-group">
            <label for="comment">Task Description:</label>
            <textarea placeholder="Task name" id="task_name" class="form-control" rows="5" name="task_name" required></textarea>
        </div>
        <div class="form-group center-block">
            <input type="submit" class="btn btn-primary" name="Submit" value="Add" class="form-control">
        </div>
    </form>

    </div>
</div>